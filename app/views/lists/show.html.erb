<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/65128/pexels-photo-65128.jpeg);">
  <div class="container">
    <h1><%= "My List #{@list.name}"%></h1>
  </div>
</div>

<div class="card-product mt-3">
  <img src="https://images.pexels.com/photos/5662857/pexels-photo-5662857.png" />
  <div class="card-product-infos">
      <% @list.bookmarks.each do |bookmark| %>
    <h2>Title  <%= bookmark.movie.title %></h2>
    <p>Rating  <%= bookmark.movie.rating %></p>
    <p>Overview  <%= bookmark.movie.overview %></p>
      <% end %>
  </div>
</div>

<p><%= link_to "Back to the list", lists_path, class: "btn btn-flat mt-3" %></p>
<p><%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-flat mt-3" %></p>
